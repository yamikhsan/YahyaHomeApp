<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_gambar_result"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:src="@drawable/mawar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_type_result"
            android:text="Type Mawar"
            style="@style/tv_style_result" />

        <TextView
            android:id="@+id/tv_harga_result"
            style="@style/tv_style_result"
            android:text="Harga = Rp 20.000"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pesan"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="handelPesan"/>

        <TextView
            android:id="@+id/tv_jumlah_result"
            style="@style/tv_style_result"
            android:text="Jumlah Kamar = 0"/>

        <TextView
            android:id="@+id/tv_total_result"
            style="@style/tv_style_result"
            android:text="Total Harga = Rp 0"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Batal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="handleBatal"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Check in"
            style="@style/Widget.AppCompat.Button.Colored"
            android:onClick="checkIn"/>

    </LinearLayout>

</LinearLayout>